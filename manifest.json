{
  "manifest_version": 2,

  "name": "CommentBuddy",
  
  "short_name": "CB",
  
  "description": "CommentBuddy",
  
  "version": "2.01",
  
  "browser_action": {
    "default_icon": "cb2_logo_16.png",
    "default_popup": "popup.html",
    "default_title": "CommentBuddy"
  },
  
  "permissions": [
    "storage",
    "tabs",
    "clipboardWrite"
  ],
    
  "icons": {
     "16": "cb2_logo_16.png",
	 "128": "cb2_logo_128.png"
   },
     
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
